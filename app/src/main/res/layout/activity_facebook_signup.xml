<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".FacebookSignup">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="44dp"
        android:scaleType="fitXY"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/facebooknamelogo" />

    <TextView
        android:id="@+id/fbCreateAccText"
        android:gravity="center"
        android:textSize="29sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a new account" />

    <TextView
        android:id="@+id/fbQuickEasyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#423D3D"
        android:text="It's quick and easy." />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="#E4E2E2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/fbFirstNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="14sp"
            android:ems="10"
            android:background="@drawable/bg_edittext_focused"
            android:inputType="textPersonName"
            android:hint="First Name" />

        <EditText
            android:id="@+id/fbSurnameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:textSize="14sp"
            android:layout_marginStart="7dp"
            android:background="@drawable/bg_edittext_focused"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Surname" />
    </LinearLayout>

    <EditText
        android:id="@+id/fbMobileEmailEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="14sp"
        android:padding="10dp"
        android:background="@drawable/bg_edittext_focused"
        android:layout_marginTop="7dp"
        android:inputType="textPersonName"
        android:hint="Mobile number or email address" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:padding="10dp"
        android:textSize="14sp"
        android:background="@drawable/bg_edittext_focused"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/fbPeopleLearnMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="9sp"
        android:gravity="left"
        android:layout_marginTop="18dp"
        android:text="@string/people_who_use_our_service_learn_more" />

    <TextView
        android:id="@+id/fbByClickingPrivacyPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="9sp"
        android:layout_marginTop="12dp"
        android:text="@string/by_clicking" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fbSignUpButton"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/fb_signup_button"
        android:text="Sign Up" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/alreadyAccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="#2884D5"
        android:textAllCaps="false"
        android:background="@drawable/fb_alreadyacct_button"
        android:text="Already have an account?" />


</LinearLayout>